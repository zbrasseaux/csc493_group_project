import csv

file = open('GIVEN_formatted_results_sample_data','w+')

with open('twitter dataset sample.csv') as csv_file:
    csv_reader = csv.reader(csv_file, delimiter=',')
    for row in csv_reader:
        sentiment = row[0]
        if sentiment == '0':
            sentiment = 'N'
        elif sentiment == '2':
            sentiment = 'Z'
        elif sentiment == '4':
            sentiment = 'P'
        file.write(sentiment + '\n')
        
file.close()
